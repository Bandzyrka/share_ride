<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<?import com.jfoenix.controls.JFXButton?>
<AnchorPane id="AnchorPane" prefHeight="463.0" prefWidth="660.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="controllers.LoginController">
    <stylesheets>
        <URL value="@login.css" />
    </stylesheets>
    <children>
        <HBox layoutY="1.0" prefHeight="557.0" prefWidth="860.0" stylesheets="@login.css">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="430.0" style="-fx-background-color: #224499;" HBox.hgrow="ALWAYS">
                    <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/ridesharelogo.png" />
                            </image>
                        </ImageView>
                        <Label text="RideShare" textFill="#e8cbe2">
                            <font>
                                <Font name="Sakkal Majalla Bold" size="47.0" />
                            </font>
                        </Label>
                    </children>
                    <opaqueInsets>
                        <Insets top="-30.0" />
                    </opaqueInsets>
                </VBox>
                <VBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="557.0" prefWidth="428.0" style="-fx-background-color: #ffff;" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@images/Preloader.gif" />
                                    </image>
                                </ImageView>
                                <Label text="Sing In" textFill="#749aae">
                                    <font>
                                        <Font name="Comic Sans MS" size="51.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="user" text="Username" prefHeight="69.0" prefWidth="315.0" />
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <PasswordField fx:id="password" prefHeight="24.0" prefWidth="314.0" >
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="NONE" />
                                    </cursor>
                                </PasswordField>
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="368.0" spacing="70.0">
                            <children>
                                <JFXButton fx:id="loginButton" mnemonicParsing="false" prefHeight="49.0" prefWidth="125.0" styleClass="btn-login" text="Sign In" textFill="#48b5c6">
                                    <font>
                                        <Font name="Calibri Bold Italic" size="36.0" />
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="registerButton" mnemonicParsing="false" prefHeight="49.0" prefWidth="125.0" styleClass="btn-login" text="Sign Up" textFill="#4bbdbf">
                                    <font>
                                        <Font name="Calibri Bold Italic" size="35.0" />
                                    </font>
                                </JFXButton>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>